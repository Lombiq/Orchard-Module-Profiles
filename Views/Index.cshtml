@model OrchardHUN.ModuleProfiles.ViewModels.ProfileListViewModel
           
@{
    Style.Require("ModuleProfiles");

    var profileNames = new SelectList(Model.ProfileNames);
}

<h1>@Html.TitleForPage(T("Module Profiles").ToString())</h1>

@Html.Label("model", T("Here is a list of the available module profiles:").ToString())
@Html.DropDownList("Available profiles", profileNames, new { @id = "profilelist" })

<input type="button" class="button" value="@T("Activate")" />
<input type="button" class="button" value="@T("Activate Inverse")" />
<input type="button" class="button" value="@T("View")" />
<input type="button" class="button" value="@T("Edit")" />
<input type="button" class="button" value="@T("Delete")" />

<br /><br />

<input type="text" id="newmodulenamefield" />
<input type="button" class="button" value="@T("Create New Profile")" />